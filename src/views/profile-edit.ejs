<!-- views/edit-profile.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" integrity="sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpvCA9XXcUnZS2FmJNp1coAFzvtCN9BmamE+4aHK8yyUHUSCcJHgXloTyT2A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    
    <link rel="stylesheet" href="/css/profile-edit.css">
    <title>Profile Edit</title>
</head>
<body>
    <main id="container">
        <form id="form" action="/page/profile/update" method="POST">
            <!-- FORM HEADER -->
            <div id="form_header">
                <h1>Suas Informações </h1>
                <!-- <i id="mode_icon" class="fa-solid fa-moon"></i> -->
            </div>
            <!-- INPUTS -->
            <div id="inputs">    
                
                <!-- Numero -->
                <div class="input-box">
                    <label for="password">
                        Numero de telefone
                        <div class="input-field">
                            <i class="fa-solid fa-phone"></i>
                            <input type="text" id="password" name="numberTel" value="<%= user.numberTel %>">
                        </div>
                    </label>
                    
                    <!-- TURNO -->
                    <div class="input-box">
                        <label for="workShift">
                            Turno de trabalho
                            <div class="input-field">
                                <i class="fa-solid fa-sun"></i>
                                <select id="workShift" name="workShift">
                                    <option value="Manhã" <%= user.workShift === 'Manhã' ? 'selected' : '' %>>Manhã</option>
                                    <option value="Tarde" <%= user.workShift === 'Tarde' ? 'selected' : '' %>>Tarde</option>
                                </select>
                            </div>
                        </label>
                    </div>

                    <div class="btn-group btn-group-toggle" data-toggle="buttons">
                        <label class="btn btn-secondary active">
                            <input type="checkbox" name="options" id="option1" value="Segunda" <%= user.days && user.days.includes('Segunda') ? 'checked' : '' %>> Segunda
                        </label>
                        <label class="btn btn-secondary">
                            <input type="checkbox" name="options" id="option2" value="Terça" <%= user.days && user.days.includes('Terça') ? 'checked' : '' %>> Terça
                        </label>
                        <label class="btn btn-secondary">
                            <input type="checkbox" name="options" id="option3" value="Quarta" <%= user.days && user.days.includes('Quarta') ? 'checked' : '' %>> Quarta
                        </label>
                        <label class="btn btn-secondary">
                            <input type="checkbox" name="options" id="option4" value="Quinta" <%= user.days && user.days.includes('Quinta') ? 'checked' : '' %>> Quinta
                        </label>
                        <label class="btn btn-secondary">
                            <input type="checkbox" name="options" id="option5" value="Sexta" <%= user.days && user.days.includes('Sexta') ? 'checked' : '' %>> Sexta
                        </label>
                    </div>

                    <br>
                    <br>
                    <!-- LOGIN BUTTON -->
            <button type="submit" id="button">
                SALVAR
            </button>
        </form>
    </main>
    <br>
    <a href="/page/profile">View Profile</a>
</body>
</html>
