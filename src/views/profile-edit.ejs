<!-- views/edit-profile.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" integrity="sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpvCA9XXcUnZS2FmJNp1coAFzvtCN9BmamE+4aHK8yyUHUSCcJHgXloTyT2A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    
    <link rel="stylesheet" href="/css/profile-edit.css">
    <title>Profile Edit</title>
</head>
<body>
    <main id="container">
        <form id="form" action="../profile/edit/update" method="POST">
            <!-- FORM HEADER -->
            <div id="form_header">
                <h1>Suas Informações </h1>
                <!-- <i id="mode_icon" class="fa-solid fa-moon"></i> -->
            </div>
            <!-- INPUTS -->
            <div id="inputs">    
                <!-- TURNO -->
                <div class="input-box">
                    <label for="password">
                      Turno de trabalho
                        <div class="input-field">
                            <i class="fa-solid fa-sun"></i>
                            <input type="text" id="password" name="workShift" value="<%= user.workShift %>">
                        </div>
                    </label>

                <!-- Numero -->
                <div class="input-box">
                    <label for="password">
                      Numero de telefone
                        <div class="input-field">
                            <i class="fa-solid fa-phone"></i>
                            <input type="number" id="password" name="numberTel" value="<%= user.numberTel %>">
                        </div>
                    </label>
                
                <br>
                <br>
            <!-- LOGIN BUTTON -->
            <button type="submit" id="button">
                SALVAR
            </button>
        </form>
    </main>
    <br>
    <a href="/page/profile">View Profile</a>
</body>
</html>
